<Window x:Class="ImageShrinker2.Windows.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:Framework="clr-namespace:ImageShrinker2.Framework"
        Title="Über ImageShrinker 2" 
        Width="300"
        SizeToContent="Height"
        Background="{DynamicResource WindowBackgroundBrush}"
        ShowInTaskbar="false"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterOwner"
        Owner="{x:Static Framework:ViewService.MainWindow}"
        ResizeMode="NoResize">
    
    <DockPanel Grid.Row="0">
        <TextBlock Margin="1" Text="ImageShrinker 2.0" FontSize="30" DockPanel.Dock="Top" HorizontalAlignment="Center" />
        <TextBlock Margin="1,4,1,1" Text="Ein Tool zum Verkleinern von Bildern" DockPanel.Dock="Top" HorizontalAlignment="Center" />
        <TextBlock Margin="1" Text="Copyright 2012 Peter Friedland" DockPanel.Dock="Top" HorizontalAlignment="Center" />

        <WrapPanel Margin="4" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
            <Button Content="OK" DockPanel.Dock="Bottom" Padding="10,1" IsDefault="true" Click="ButtonClick" />
        </WrapPanel>
    </DockPanel>
    
</Window>
