<Window x:Class="ImageShrinker2.Windows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Title="ImageShrinker verarbeitet"
        WindowStyle="SingleBorderWindow"
        SizeToContent="Height">

    <DockPanel>
        <TextBlock x:Name="_informationText" Margin="10,6,10,2" VerticalAlignment="Center" DockPanel.Dock="Top" TextTrimming="CharacterEllipsis" />
        <ProgressBar Margin="10,2"  Height="20" x:Name="_progressBar" DockPanel.Dock="Top" />
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="4">
            <Button Content="Abbrechen" IsCancel="True" Padding="10,0" />
        </WrapPanel>
    </DockPanel>
</Window>
