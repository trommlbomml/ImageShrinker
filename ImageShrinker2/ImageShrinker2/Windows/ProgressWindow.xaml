<Window x:Class="ImageShrinker2.Windows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Framework="clr-namespace:ImageShrinker2.Framework"
        Width="300"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Owner="{x:Static Framework:ViewService.MainWindow}"
        WindowStyle="SingleBorderWindow"
        SizeToContent="Height">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                x:Name="_informationText"
                Margin="10,6,10,2"
                VerticalAlignment="Center"
                TextTrimming="CharacterEllipsis"
                />
            <ProgressBar 
                Grid.Row="1" 
                Margin="10,2" 
                Height="20" 
                x:Name="_progressBar"  />
            <StackPanel Grid.Row="2">
                <Button 
                    Content="Abbrechen" 
                    IsCancel="True" 
                    HorizontalAlignment="Center" 
                    Padding="10,0,10,0" 
                    Width="Auto" 
                    Margin="4"/>
            </StackPanel>
        </Grid>
</Window>
